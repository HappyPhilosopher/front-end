/* 小程序默认在外部包裹一层 page 标签作为全局容器 */
page {
  height: 100%;
  background-color: #b3d4db;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
}

.motto-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 80rpx;
  border: 1px solid #405f80;
  border-radius: 5px;
  margin-top: 200rpx;
}

.motto {
  font-size: 22rpx;
  font-weight: bold;
  color: #405f80;
}
